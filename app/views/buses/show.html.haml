- model_class = Bus
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @bus.name
%p
  %strong= model_class.human_attribute_name(:bid) + ':'
  %br
  = @bus.bid
%p
  %strong= model_class.human_attribute_name(:route_id) + ':'
  %br
  = @bus.route_id


= link_to t('.back', :default => t("helpers.links.back")), buses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_bus_path(@bus), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), bus_path(@bus), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
