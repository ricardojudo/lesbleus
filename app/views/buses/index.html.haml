- model_class = Bus
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:bid)
      %th= model_class.human_attribute_name(:latitude)
      %th= model_class.human_attribute_name(:longitude)
      %th= model_class.human_attribute_name(:passengers)
      %th= model_class.human_attribute_name(:route_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @buses.each do |bus|
      %tr
        %td= link_to bus.id, bus_path(bus)
        %td= bus.name
        %td= bus.bid
        %td= bus.latitude
        %td= bus.longitude
        %td= bus.passengers
        %td= bus.route.name
        %td= bus.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_bus_path(bus), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), bus_path(bus), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_bus_path, :class => 'btn btn-primary'
